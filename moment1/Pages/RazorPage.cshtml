@page
@model moment1.Pages.RazorPageModel
@{
    ViewData["Title"] = "RazorPage";
    ViewData["Active"] = "Razor";


    var date = DateTime.Now;
    DayOfWeek day = DateTime.Today.DayOfWeek;
    string wday = "måndag";

    switch (day)
    {
        case DayOfWeek.Saturday:  wday = "lördag"; break;
        case DayOfWeek.Sunday: wday = "sondag"; break;
        case DayOfWeek.Monday: wday = "måndag"; break;
        case DayOfWeek.Tuesday:  wday = "tisdag"; break;
        case DayOfWeek.Wednesday: wday = "onsdag"; break;
        case DayOfWeek.Thursday:  wday = "torsdag"; break;
        case DayOfWeek.Friday: wday = "fredag"; break;
    }

    string[] courses = {
        "DT057G Webbutveckling I",
        "DT084G Introduktion till programmering i JavaScript",
        "DT200G Grafisk teknik för webb",
        "DT068G Webbanvändbarhet",
        "DT003G Databaser",
        "DT093G Webbutveckling II",
        "DT197G Webbdesign för CMS",
        "DT173G Webbutveckling III",
        "IG021G Projektledning",
        "DT193G Fullstack-utveckling med ramverk",
        "DT162G JavaScript-baserad webbutveckling",
        "DT071G Programmering i C#.NET",
        "DT191G Webbutveckling med .NET",
        "IG021G Affärsplaner och kommersialisering",
        "DT140G Självständigt arbete" };
}

<div class="main-container">
    <p>Dagens datum är: @date.ToString().</p>

    @if (wday == "måndag")
    {
        <p>Idag är det måndag.</p>
    } else
    {
        <p>Idag är det inte måndag. Det är @wday.</p>
    }

    <h3 class="display-7">Kurser programmet Webbutveckling på Mittuniversitetet:</h3>

    <ol>
        @foreach(var course in courses )
        {
            <li>@course</li>
        }
    </ol>

</div>